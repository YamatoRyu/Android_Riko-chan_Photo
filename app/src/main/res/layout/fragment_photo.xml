<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PhotoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/jump"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:adjustViewBounds="true"
                android:src="@drawable/riko__chan_jump" />

            <ImageView
                android:id="@+id/miracle_wave"
                android:layout_width="wrap_content"
                android:layout_height="205dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/riko__chan_miracle_wave" />

            <ImageView
                android:id="@+id/shrine_maiden_of_the_fall_foliage"
                android:layout_width="wrap_content"
                android:layout_height="205dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/riko__chan_shrine_maiden_of_the_fall_foliage" />

            <ImageView
                android:id="@+id/water_symphony"
                android:layout_width="wrap_content"
                android:layout_height="205dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/riko__chan_water_symphony" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>